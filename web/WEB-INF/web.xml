<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <context-param>
        <param-name>dbname</param-name>
        <param-value>xyz_assoc</param-value>
    </context-param>
    <context-param>
        <param-name>member_Id</param-name>
        <param-value>id</param-value>
    </context-param>
    <servlet>
        <servlet-name>AddMember</servlet-name>
        <servlet-class>web.AddMember</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakeClaim</servlet-name>
        <servlet-class>web.memberServlets.MakeClaim</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CheckLogin</servlet-name>
        <servlet-class>web.CheckLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Registration</servlet-name>
        <servlet-class>web.memberServlets.Registration</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetClaims</servlet-name>
        <servlet-class>web.memberServlets.GetClaims</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetPayments</servlet-name>
        <servlet-class>web.memberServlets.GetPayments</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChangePassword</servlet-name>
        <servlet-class>web.ChangePassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAllMembers</servlet-name>
        <servlet-class>web.adminServlets.GetAllMembers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AssessClaim</servlet-name>
        <servlet-class>web.adminServlets.AssessClaim</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MakePayment</servlet-name>
        <servlet-class>web.memberServlets.MakePayment</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetTotalIncome</servlet-name>
        <servlet-class>web.adminServlets.GetTotalIncome</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetAMember</servlet-name>
        <servlet-class>web.adminServlets.GetAMember</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddMember</servlet-name>
        <url-pattern>/AddMember</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakeClaim</servlet-name>
        <url-pattern>/MakeClaim</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CheckLogin</servlet-name>
        <url-pattern>/CheckLogin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Registration</servlet-name>
        <url-pattern>/Registration</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetClaims</servlet-name>
        <url-pattern>/GetClaims</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetPayments</servlet-name>
        <url-pattern>/GetPayments</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChangePassword</servlet-name>
        <url-pattern>/ChangePassword</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetAllMembers</servlet-name>
        <url-pattern>/GetAllMembers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AssessClaim</servlet-name>
        <url-pattern>/AssessClaim</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MakePayment</servlet-name>
        <url-pattern>/MakePayment</url-pattern>
    </servlet-mapping>
